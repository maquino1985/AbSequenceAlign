# Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v2
VITE_APP_TITLE=AbSequenceAlign
VITE_APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=absequencealign_dev
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=true
DB_ECHO_POOL=false

# Database URLs (auto-generated from above config)
# DATABASE_URL=postgresql://user:password@localhost:5432/absequencealign

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services
# EXTERNAL_API_KEY=your-api-key-here

# Data Directory Configuration
# Local development: relative to project root
DATA_DIR=./data
# Docker/CI: absolute path in container
# DATA_DIR=/app/data

# HMM Model Directories (optional - will use DATA_DIR defaults if not set)
# HMM_MODEL_DIR=./data/concatenated
# ISOTYPE_HMM_DIR=./data/isotype_hmms

# Monitoring
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Docker Configuration
COMPOSE_PROJECT_NAME=absequencealign
DOCKER_REGISTRY=ghcr.io
GITHUB_REPOSITORY_OWNER=maquino1985
IMAGE_TAG=latest
