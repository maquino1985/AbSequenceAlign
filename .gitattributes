data/blast/*.phd filter=lfs diff=lfs merge=lfs -text
data/blast/*.pnd filter=lfs diff=lfs merge=lfs -text
data/blast/*.pni filter=lfs diff=lfs merge=lfs -text
data/blast/*.pog filter=lfs diff=lfs merge=lfs -text
data/blast/*.psd filter=lfs diff=lfs merge=lfs -text
data/blast/*.psi filter=lfs diff=lfs merge=lfs -text
data/blast/*.pog filter=lfs diff=lfs merge=lfs -text

# IgBLAST database files
data/igblast/*.tar.gz filter=lfs diff=lfs merge=lfs -text
data/igblast/internal_data/** filter=lfs diff=lfs merge=lfs -text
